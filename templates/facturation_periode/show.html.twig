{% extends 'base.html.twig' %}

{% block title %}Période de facturation - {{ facturation_periode.dateDebut|date('d/m/Y') }}{% endblock %}

{% block body %}
<div class="container-fluid px-3 px-md-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h1>
                <i class="bi bi-calendar-range"></i> Période de facturation
            </h1>
            <p class="text-muted mb-0">
                {{ facturation_periode.dateDebut|date('d/m/Y') }} - {{ facturation_periode.dateFin|date('d/m/Y') }}
            </p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('app_facturation_periode_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-8">
            {# Informations de la période #}
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informations</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Contrat</dt>
                        <dd class="col-sm-8">
                            <strong>{{ facturation_periode.contratLigne.contrat.reference }}</strong><br>
                            <small class="text-muted">{{ facturation_periode.contratLigne.contrat.client.nom }}</small>
                        </dd>

                        <dt class="col-sm-4">Site</dt>
                        <dd class="col-sm-8">{{ facturation_periode.contratLigne.site.nomSite }}</dd>

                        <dt class="col-sm-4">Période</dt>
                        <dd class="col-sm-8">
                            {{ facturation_periode.dateDebut|date('d/m/Y') }} - {{ facturation_periode.dateFin|date('d/m/Y') }}
                        </dd>

                        <dt class="col-sm-4">Statut</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-{{ facturation_periode.statut.value == 'FACTURE' ? 'success' : (facturation_periode.statut.value == 'VALIDE' ? 'primary' : 'warning') }} fs-6">
                                {{ facturation_periode.statut.value }}
                            </span>
                        </dd>

                        <dt class="col-sm-4">Créée le</dt>
                        <dd class="col-sm-8">{{ facturation_periode.createdAt|date('d/m/Y H:i') }}</dd>
                    </dl>
                </div>
            </div>

            {# Compteurs des imprimantes #}
            {% if facturation_periode.facturationCompteurs|length > 0 %}
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-printer"></i> Compteurs des imprimantes</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Imprimante</th>
                                        <th class="text-end">Compteur début (N)</th>
                                        <th class="text-end">Compteur fin (N)</th>
                                        <th class="text-end">Pages N</th>
                                        <th class="text-end">Compteur début (C)</th>
                                        <th class="text-end">Compteur fin (C)</th>
                                                        <th class="text-end">Pages C</th>
                                                        <th>Source</th>
                                                        <th>Statut</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for compteur in facturation_periode.facturationCompteurs %}
                                                        {% set affectation = compteur.affectationMateriel %}
                                                        {% set imprimante = affectation.imprimante %}
                                                        <tr>
                                                            <td>
                                                                <strong>{{ imprimante.numeroSerie }}</strong><br>
                                                                <small class="text-muted">{{ imprimante.modele.referenceModele }}</small>
                                                                {% if imprimante.adresseIp %}
                                                                    <br><small class="text-muted">IP: {{ imprimante.adresseIp }}</small>
                                                                {% endif %}
                                                            </td>
                                                            <td class="text-end">{{ compteur.compteurDebutNoir|number_format(0, ',', ' ') }}</td>
                                                            <td class="text-end">
                                                                {{ compteur.compteurFinNoir|number_format(0, ',', ' ') }}
                                                                {% if compteur.compteurFinEstime %}
                                                                    <span class="badge bg-warning ms-1" title="Compteur estimé">Est.</span>
                                                                {% endif %}
                                                            </td>
                                                            <td class="text-end">
                                                                <strong class="text-primary">{{ compteur.pagesNoir|number_format(0, ',', ' ') }}</strong>
                                                            </td>
                                                            <td class="text-end">
                                                                {% if compteur.compteurDebutCouleur %}
                                                                    {{ compteur.compteurDebutCouleur|number_format(0, ',', ' ') }}
                                                                {% else %}
                                                                    <span class="text-muted">-</span>
                                                                {% endif %}
                                                            </td>
                                                            <td class="text-end">
                                                                {% if compteur.compteurFinCouleur %}
                                                                    {{ compteur.compteurFinCouleur|number_format(0, ',', ' ') }}
                                                                    {% if compteur.compteurFinEstime %}
                                                                        <span class="badge bg-warning ms-1" title="Compteur estimé">Est.</span>
                                                                    {% endif %}
                                                                {% else %}
                                                                    <span class="text-muted">-</span>
                                                                {% endif %}
                                                            </td>
                                                            <td class="text-end">
                                                                <strong class="text-info">{{ compteur.pagesCouleur|number_format(0, ',', ' ') }}</strong>
                                                            </td>
                                                            <td>
                                                                <small>{{ compteur.sourceDebut.value }} → {{ compteur.sourceFin.value }}</small>
                                                                {% if compteur.dateReleveFin %}
                                                                    <br><small class="text-muted">{{ compteur.dateReleveFin|date('d/m/Y') }}</small>
                                                                {% endif %}
                                                            </td>
                                                            <td>
                                                                {% if compteur.compteurFinEstime %}
                                                                    <span class="badge bg-warning" title="Compteur de fin estimé">Estimé</span>
                                                                {% else %}
                                                                    <span class="badge bg-success" title="Compteur de fin réel">Réel</span>
                                                                {% endif %}
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-warning mb-4">
                    <i class="bi bi-exclamation-triangle"></i> Aucun compteur enregistré pour cette période.
                    <form method="post" action="{{ path('app_facturation_periode_resolve_counters', {'id': facturation_periode.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('resolve_counters' ~ facturation_periode.id) }}">
                        <button type="submit" class="btn btn-sm btn-primary mt-2">
                            <i class="bi bi-arrow-clockwise"></i> Résoudre les compteurs
                        </button>
                    </form>
                </div>
            {% endif %}

            {# Détail du calcul #}
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-calculator"></i> Détail du calcul
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-12 col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block">Pages noires</small>
                                <strong class="fs-4">{{ calcul.pagesNoir }}</strong>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block">Pages couleur</small>
                                <strong class="fs-4">{{ calcul.pagesCouleur }}</strong>
                            </div>
                        </div>
                    </div>

                    {% if calcul.details is not empty %}
                        <h6 class="mb-3">Détail des montants</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Libellé</th>
                                        <th>Quantité</th>
                                        <th>Prix unitaire</th>
                                        <th class="text-end">Montant</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for detail in calcul.details %}
                                        <tr>
                                            <td>{{ detail.libelle }}</td>
                                            <td>
                                                {% if detail.quantite is defined %}
                                                    {{ detail.quantite }}
                                                    {% if detail.pages_incluses is defined and detail.pages_incluses > 0 %}
                                                        <small class="text-muted">({{ detail.pages_incluses }} incluses)</small>
                                                    {% endif %}
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if detail.prix_unitaire is defined %}
                                                    {{ detail.prix_unitaire|number_format(4, ',', ' ') }} €
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                            <td class="text-end">
                                                <strong>{{ detail.montant|number_format(2, ',', ' ') }} €</strong>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th colspan="3" class="text-end">Total</th>
                                        <th class="text-end text-success fs-5">
                                            {{ calcul.montant|number_format(2, ',', ' ') }} €
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Aucun détail de calcul disponible. Les compteurs doivent être résolus pour calculer les montants.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            {# Résumé financier #}
            <div class="card border-0 shadow-sm mb-4 border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-cash-stack"></i> Montant total
                    </h5>
                </div>
                <div class="card-body text-center">
                    <h2 class="text-success mb-0">{{ calcul.montant|number_format(2, ',', ' ') }} €</h2>
                    <small class="text-muted">HT</small>
                </div>
            </div>

            {# Actions #}
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-tools"></i> Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        {% if facturation_periode.facturationCompteurs|length == 0 %}
                            <form method="post" action="{{ path('app_facturation_periode_resolve_counters', {'id': facturation_periode.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('resolve_counters' ~ facturation_periode.id) }}">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-arrow-clockwise"></i> Résoudre les compteurs
                                </button>
                            </form>
                        {% endif %}
                        {% if facturation_periode.statut.value == 'BROUILLON' %}
                            <form method="post" action="{{ path('app_facturation_periode_validate', {'id': facturation_periode.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('validate' ~ facturation_periode.id) }}">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle"></i> Valider
                                </button>
                            </form>
                        {% endif %}
                        {% if facturation_periode.statut.value == 'VALIDE' %}
                            <form method="post" action="{{ path('app_facturation_periode_invoice', {'id': facturation_periode.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('invoice' ~ facturation_periode.id) }}">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-receipt"></i> Marquer comme facturé
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
