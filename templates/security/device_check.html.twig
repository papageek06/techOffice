{% extends 'base.html.twig' %}

{% block title %}Vérification de l'appareil{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow mt-5">
                <div class="card-header bg-warning text-dark text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-shield-check"></i> Vérification de l'appareil
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Nouvel appareil détecté</strong><br>
                        Un code de vérification a été envoyé par SMS à votre numéro de téléphone.
                        Veuillez l'entrer ci-dessous pour finaliser votre connexion.
                    </div>

                    {% for flash_error in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> {{ flash_error }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    {% for flash_success in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle"></i> {{ flash_success }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    {% if challenge %}
                        <div class="alert alert-secondary">
                            <small>
                                <i class="bi bi-clock"></i> 
                                Code valable pendant 10 minutes<br>
                                <i class="bi bi-shield-exclamation"></i> 
                                Tentatives restantes : <strong>{{ challenge.remainingAttempts }}</strong>
                            </small>
                        </div>
                    {% endif %}

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                        <div class="mb-3">
                            {{ form_row(form.otp, {
                                'attr': {
                                    'class': 'form-control text-center fs-4',
                                    'style': 'letter-spacing: 0.5em;',
                                    'autofocus': true
                                }
                            }) }}
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Durée de confiance</label>
                            {{ form_row(form.trustDuration, {
                                'attr': {
                                    'class': 'form-check-input'
                                }
                            }) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Valider et continuer
                            </button>
                            <a href="{{ path('app_logout') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-box-arrow-left"></i> Annuler et se déconnecter
                            </a>
                        </div>
                    {{ form_end(form) }}

                    <div class="mt-3 text-center">
                        <small class="text-muted">
                            <i class="bi bi-question-circle"></i>
                            Vous n'avez pas reçu le code ? 
                            <a href="{{ path('app_logout') }}">Déconnectez-vous et reconnectez-vous</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Auto-focus sur le champ OTP et formatage automatique
document.addEventListener('DOMContentLoaded', function() {
    const otpInput = document.querySelector('#device_check_type_otp');
    if (otpInput) {
        otpInput.focus();
        
        // Limiter à 6 chiffres
        otpInput.addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '').slice(0, 6);
        });
    }
});
</script>
{% endblock %}
