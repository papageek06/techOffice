{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
    <div class="row g-3">
        <div class="col-12">
            <div class="mb-3">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}
                {% if form.nom.vars.help is defined and form.nom.vars.help %}
                    <div class="form-text">{{ form.nom.vars.help }}</div>
                {% endif %}
            </div>
        </div>

        <div class="col-12">
            <div class="mb-3">
                <div class="form-check">
                    {{ form_widget(form.actif) }}
                    {{ form_label(form.actif, null, {'label_attr': {'class': 'form-check-label'}}) }}
                </div>
                {{ form_errors(form.actif) }}
                {% if form.actif.vars.help is defined and form.actif.vars.help %}
                    <div class="form-text">{{ form.actif.vars.help }}</div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_client_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Annuler
        </a>
    </div>
{{ form_end(form) }}
