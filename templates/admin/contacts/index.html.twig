{% extends 'base.html.twig' %}

{% block title %}Contacts M365{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4">
        <i class="bi bi-people"></i> Contacts Microsoft 365
    </h1>

    {% for label, messages in app.flashes(['success', 'error']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : 'success' }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>État de la synchronisation</span>
            {% if not m365_connected %}
                <a href="{{ path('app_m365_login') }}" class="btn btn-primary">
                    <i class="bi bi-link-45deg"></i> Connecter Microsoft 365
                </a>
            {% endif %}
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Connexion M365</dt>
                <dd class="col-sm-9">
                    {% if m365_connected %}
                        <span class="badge bg-success">Connecté</span>
                        <a href="{{ path('app_m365_login') }}" class="ms-2 small">Reconnecter</a>
                    {% else %}
                        <span class="badge bg-secondary">Non connecté</span>
                        <p class="text-muted small mb-0 mt-1">Cliquez sur « Connecter Microsoft 365 » puis autorisez l’accès aux contacts partagés.</p>
                    {% endif %}
                </dd>

                <dt class="col-sm-3">Dernière synchro</dt>
                <dd class="col-sm-9">
                    {% if last_sync_at %}
                        {{ last_sync_at|date('d/m/Y H:i') }}
                        {% if sync_meta.lastSyncContactsCount is defined %}
                            <span class="text-muted">({{ sync_meta.lastSyncContactsCount }} contact(s) importé(s) ou mis à jour)</span>
                        {% endif %}
                    {% else %}
                        <span class="text-muted">Jamais</span>
                    {% endif %}
                </dd>

                <dt class="col-sm-3">Contacts en base</dt>
                <dd class="col-sm-9">{{ contacts_count }}</dd>
            </dl>
        </div>
        {% if m365_connected %}
        <div class="card-footer">
            <form method="post" action="{{ path('app_admin_contacts_sync') }}" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('admin_contacts_sync') }}">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-arrow-repeat"></i> Synchroniser
                </button>
            </form>
        </div>
        {% endif %}
    </div>

    {# Liste des contacts #}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-journal-text"></i> Liste des contacts ({{ contacts_count }})</span>
        </div>
        <div class="card-body p-0">
            {% if contacts|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nom</th>
                            <th>Société</th>
                            <th>Poste</th>
                            <th>Email</th>
                            <th>Tél. pro</th>
                            <th>Tél. mobile</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contact in contacts %}
                        <tr>
                            <td>
                                {{ contact.displayName ?? (contact.givenName ~ ' ' ~ contact.surname)|trim ?: '—' }}
                            </td>
                            <td>{{ contact.companyName ?? '—' }}</td>
                            <td>{{ contact.jobTitle ?? '—' }}</td>
                            <td>
                                {% if contact.email1 %}
                                    <a href="mailto:{{ contact.email1 }}">{{ contact.email1 }}</a>
                                {% else %}
                                    —
                                {% endif %}
                            </td>
                            <td>{{ contact.phoneBusiness ?? '—' }}</td>
                            <td>{{ contact.phoneMobile ?? '—' }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <p class="text-muted mb-0 p-3">Aucun contact synchronisé. Connectez Microsoft 365 puis cliquez sur « Synchroniser ».</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
