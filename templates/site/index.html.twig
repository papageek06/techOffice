{% extends 'base.html.twig' %}

{% block title %}Liste des Sites{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-building"></i> Liste des Sites
        </h1>
        <a href="{{ path('app_site_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau Site
        </a>
    </div>

    {% if sites is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun site trouvé.
        </div>
    {% else %}
        {% for site in sites %}
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">
                            <i class="bi bi-building"></i> 
                            <a href="{{ path('app_site_show', {'id': site.id}) }}" class="text-white text-decoration-none">
                                {{ site.nomSite }}
                            </a>
                            {% if site.principal %}
                                <span class="badge bg-warning text-dark ms-2">Principal</span>
                            {% endif %}
                            {% if not site.actif %}
                                <span class="badge bg-secondary ms-2">Inactif</span>
                            {% endif %}
                        </h5>
                        <small class="text-white-50">Client : {{ site.client.nom }}</small>
                    </div>
                    <div>
                        <a href="{{ path('app_site_show', {'id': site.id}) }}" class="btn btn-sm btn-light me-2">
                            <i class="bi bi-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_site_edit', {'id': site.id}) }}" class="btn btn-sm btn-light">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% if site.imprimantes is empty %}
                        <p class="text-muted mb-0">
                            <i class="bi bi-info-circle"></i> Aucune imprimante sur ce site.
                        </p>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>Modèle</th>
                                        <th>Fabricant</th>
                                        <th class="d-none d-md-table-cell">N° Série</th>
                                        <th class="d-none d-md-table-cell">IP</th>
                                        <th>Statut</th>
                                        <th>Niveaux d'encre</th>
                                        <th>Dernier relevé</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for imprimante in site.imprimantes %}
                                        {% set dernierEtat = imprimante.getDernierEtatConsommable() %}
                                        {% set dernierReleve = imprimante.getDernierReleve() %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('app_imprimante_show', {'id': imprimante.id}) }}" class="text-decoration-none">
                                                    <strong>{{ imprimante.modele.referenceModele }}</strong>
                                                </a>
                                                {% if imprimante.modele.couleur %}
                                                    <span class="badge bg-info">Couleur</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">N&B</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ imprimante.modele.fabricant.nomFabricant }}</td>
                                            <td class="d-none d-md-table-cell"><code>{{ imprimante.numeroSerie }}</code></td>
                                            <td class="d-none d-md-table-cell">
                                                {% if imprimante.adresseIp %}
                                                    <code>{{ imprimante.adresseIp }}</code>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge bg-{{ imprimante.statut.value == 'actif' ? 'success' : (imprimante.statut.value == 'hs' ? 'danger' : 'warning') }}">
                                                    {{ imprimante.statut.value|upper }}
                                                </span>
                                            </td>
                                            <td>
                                                {% if dernierEtat %}
                                                    <div class="d-flex gap-1 align-items-center flex-wrap">
                                                        {# Noir #}
                                                        {% if dernierEtat.noirPourcent is not null %}
                                                            <div class="flex-grow-1" style="min-width: 60px; max-width: 120px;">
                                                                <div class="progress" style="height: 18px;">
                                                                    <div class="progress-bar bg-dark text-white d-flex align-items-center justify-content-center" 
                                                                         role="progressbar" 
                                                                         style="width: {{ dernierEtat.noirPourcent }}%; font-size: 0.7rem;" 
                                                                         aria-valuenow="{{ dernierEtat.noirPourcent }}" 
                                                                         aria-valuemin="0" 
                                                                         aria-valuemax="100"
                                                                         title="Noir: {{ dernierEtat.noirPourcent }}%">
                                                                        <strong>{{ dernierEtat.noirPourcent }}%</strong>
                                                                    </div>
                                                                </div>
                                                                <small class="text-muted d-block text-center" style="font-size: 0.65rem;">N</small>
                                                            </div>
                                                        {% endif %}
                                                        
                                                        {% if imprimante.modele.couleur %}
                                                            {# Cyan #}
                                                            {% if dernierEtat.cyanPourcent is not null %}
                                                                <div class="flex-grow-1" style="min-width: 60px; max-width: 120px;">
                                                                    <div class="progress" style="height: 18px;">
                                                                        <div class="progress-bar text-white d-flex align-items-center justify-content-center" 
                                                                             role="progressbar" 
                                                                             style="width: {{ dernierEtat.cyanPourcent }}%; background-color: #00bcd4; font-size: 0.7rem;" 
                                                                             aria-valuenow="{{ dernierEtat.cyanPourcent }}" 
                                                                             aria-valuemin="0" 
                                                                             aria-valuemax="100"
                                                                             title="Cyan: {{ dernierEtat.cyanPourcent }}%">
                                                                            <strong>{{ dernierEtat.cyanPourcent }}%</strong>
                                                                        </div>
                                                                    </div>
                                                                    <small class="text-muted d-block text-center" style="font-size: 0.65rem;">C</small>
                                                                </div>
                                                            {% endif %}
                                                            
                                                            {# Magenta #}
                                                            {% if dernierEtat.magentaPourcent is not null %}
                                                                <div class="flex-grow-1" style="min-width: 60px; max-width: 120px;">
                                                                    <div class="progress" style="height: 18px;">
                                                                        <div class="progress-bar text-white d-flex align-items-center justify-content-center" 
                                                                             role="progressbar" 
                                                                             style="width: {{ dernierEtat.magentaPourcent }}%; background-color: #e91e63; font-size: 0.7rem;" 
                                                                             aria-valuenow="{{ dernierEtat.magentaPourcent }}" 
                                                                             aria-valuemin="0" 
                                                                             aria-valuemax="100"
                                                                             title="Magenta: {{ dernierEtat.magentaPourcent }}%">
                                                                            <strong>{{ dernierEtat.magentaPourcent }}%</strong>
                                                                        </div>
                                                                    </div>
                                                                    <small class="text-muted d-block text-center" style="font-size: 0.65rem;">M</small>
                                                                </div>
                                                            {% endif %}
                                                            
                                                            {# Jaune #}
                                                            {% if dernierEtat.jaunePourcent is not null %}
                                                                <div class="flex-grow-1" style="min-width: 60px; max-width: 120px;">
                                                                    <div class="progress" style="height: 18px;">
                                                                        <div class="progress-bar text-dark d-flex align-items-center justify-content-center" 
                                                                             role="progressbar" 
                                                                             style="width: {{ dernierEtat.jaunePourcent }}%; background-color: #ffeb3b; font-size: 0.7rem;" 
                                                                             aria-valuenow="{{ dernierEtat.jaunePourcent }}" 
                                                                             aria-valuemin="0" 
                                                                             aria-valuemax="100"
                                                                             title="Jaune: {{ dernierEtat.jaunePourcent }}%">
                                                                            <strong>{{ dernierEtat.jaunePourcent }}%</strong>
                                                                        </div>
                                                                    </div>
                                                                    <small class="text-muted d-block text-center" style="font-size: 0.65rem;">J</small>
                                                                </div>
                                                            {% endif %}
                                                        {% endif %}
                                                    </div>
                                                {% else %}
                                                    <span class="text-muted">Aucune donnée</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if dernierReleve %}
                                                    <div>
                                                        <strong>{{ dernierReleve.dateReleve|date('d/m/Y') }}</strong>
                                                        <br>
                                                        <small class="text-muted">
                                                            N: {{ dernierReleve.compteurNoir ?? '-' }} | 
                                                            C: {{ dernierReleve.compteurCouleur ?? '-' }}
                                                        </small>
                                                    </div>
                                                {% else %}
                                                    <span class="text-muted">Aucun relevé</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
