{% extends 'base.html.twig' %}

{% block title %}Liste des Sites{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h1>
            <i class="bi bi-building"></i> Liste des Sites
        </h1>
        <div class="d-flex gap-2 flex-grow-1 justify-content-end" style="max-width: 600px;">
            <div class="input-group flex-grow-1">
                <input type="text" 
                       id="searchInput"
                       class="form-control" 
                       placeholder="Rechercher par nom de site ou numéro de série..." 
                       value="{{ search ?? '' }}"
                       aria-label="Rechercher">
                <button class="btn btn-outline-secondary" type="button" id="searchButton">
                    <i class="bi bi-search"></i> Rechercher
                </button>
                <button class="btn btn-outline-secondary" type="button" id="clearButton" style="display: none;">
                    <i class="bi bi-x-circle"></i> Effacer
                </button>
            </div>
        </div>
        <a href="{{ path('app_site_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau Site
        </a>
    </div>

    <div id="searchResults">
        {% include 'site/_results.html.twig' %}
    </div>
    </div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const searchButton = document.getElementById('searchButton');
    const clearButton = document.getElementById('clearButton');
    const searchResults = document.getElementById('searchResults');
    const searchUrl = '{{ path('app_site_index') }}';
    
    let searchTimeout;
    let isSearching = false;

    // Fonction pour effectuer la recherche
    function performSearch(query) {
        if (isSearching) return;
        
        isSearching = true;
        const url = searchUrl + '?search=' + encodeURIComponent(query) + '&ajax=1';
        
        // Afficher un indicateur de chargement
        searchResults.innerHTML = '<div class="text-center py-5"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Chargement...</span></div></div>';
        
        fetch(url, {
            method: 'GET',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Accept': 'text/html'
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Erreur réseau');
            }
            return response.text();
        })
        .then(html => {
            searchResults.innerHTML = html;
            isSearching = false;
            
            // Afficher/masquer le bouton Effacer
            if (query.trim() !== '') {
                clearButton.style.display = '';
            } else {
                clearButton.style.display = 'none';
            }
        })
        .catch(error => {
            console.error('Erreur lors de la recherche:', error);
            searchResults.innerHTML = '<div class="alert alert-danger d-flex align-items-center flex-wrap gap-2">' +
                '<span class="flex-grow-1"><i class="bi bi-exclamation-triangle me-2"></i>Une erreur est survenue lors de la recherche.</span>' +
                '<button type="button" class="btn btn-outline-danger btn-sm" id="searchRetryBtn"><i class="bi bi-arrow-clockwise me-1"></i>Réessayer</button>' +
                '</div>';
            isSearching = false;
            var retryBtn = document.getElementById('searchRetryBtn');
            if (retryBtn) retryBtn.addEventListener('click', function() { performSearch(searchInput.value.trim()); });
        });
    }

    // Recherche en temps réel avec debounce (500ms)
    searchInput.addEventListener('input', function() {
        const query = this.value.trim();
        
        clearTimeout(searchTimeout);
        
        searchTimeout = setTimeout(function() {
            performSearch(query);
        }, 500); // Attendre 500ms après la dernière frappe
    });

    // Recherche au clic sur le bouton
    searchButton.addEventListener('click', function() {
        const query = searchInput.value.trim();
        performSearch(query);
    });

    // Recherche avec la touche Entrée
    searchInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            clearTimeout(searchTimeout);
            const query = this.value.trim();
            performSearch(query);
        }
    });

    // Effacer la recherche
    clearButton.addEventListener('click', function() {
        searchInput.value = '';
        performSearch('');
    });

    // Afficher le bouton Effacer si une recherche est présente au chargement
    if (searchInput.value.trim() !== '') {
        clearButton.style.display = '';
    }

    // Clic sur une ligne imprimante → aller vers la fiche imprimante (fonctionne aussi après chargement AJAX)
    searchResults.addEventListener('click', function(e) {
        const row = e.target.closest('tr.imprimante-row');
        if (row && row.dataset.href) {
            e.preventDefault();
            window.location.href = row.dataset.href;
        }
    });

    // Touche Entrée sur une ligne imprimante (accessibilité)
    searchResults.addEventListener('keydown', function(e) {
        if (e.key !== 'Enter') return;
        const row = e.target.closest('tr.imprimante-row');
        if (row && row.dataset.href) {
            e.preventDefault();
            window.location.href = row.dataset.href;
        }
    });
});
</script>
{% endblock %}
