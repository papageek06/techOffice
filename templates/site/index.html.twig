{% extends 'base.html.twig' %}

{% block title %}Liste des Sites{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-building"></i> Liste des Sites
        </h1>
        <a href="{{ path('app_site_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau Site
        </a>
    </div>

    {% if sites is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun site trouvé.
        </div>
    {% else %}
        {% for site in sites %}
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">
                            <i class="bi bi-building"></i> {{ site.nomSite }}
                            {% if site.principal %}
                                <span class="badge bg-warning text-dark ms-2">Principal</span>
                            {% endif %}
                            {% if not site.actif %}
                                <span class="badge bg-secondary ms-2">Inactif</span>
                            {% endif %}
                        </h5>
                        <small class="text-white-50">Client : {{ site.client.nom }}</small>
                    </div>
                    <div>
                        <a href="{{ path('app_site_show', {'id': site.id}) }}" class="btn btn-sm btn-light me-2">
                            <i class="bi bi-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_site_edit', {'id': site.id}) }}" class="btn btn-sm btn-light">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% if site.imprimantes is empty %}
                        <p class="text-muted mb-0">
                            <i class="bi bi-info-circle"></i> Aucune imprimante sur ce site.
                        </p>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>Modèle</th>
                                        <th>Fabricant</th>
                                        <th>N° Série</th>
                                        <th>IP</th>
                                        <th>Statut</th>
                                        <th>Niveaux d'encre</th>
                                        <th>Dernier relevé</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for imprimante in site.imprimantes %}
                                        {% set dernierEtat = imprimante.getDernierEtatConsommable() %}
                                        {% set dernierReleve = imprimante.getDernierReleve() %}
                                        <tr>
                                            <td>
                                                <strong>{{ imprimante.modele.referenceModele }}</strong>
                                                {% if imprimante.modele.couleur %}
                                                    <span class="badge bg-info">Couleur</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">N&B</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ imprimante.modele.fabricant.nomFabricant }}</td>
                                            <td><code>{{ imprimante.numeroSerie }}</code></td>
                                            <td>
                                                {% if imprimante.adresseIp %}
                                                    <code>{{ imprimante.adresseIp }}</code>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge bg-{{ imprimante.statut.value == 'actif' ? 'success' : (imprimante.statut.value == 'hs' ? 'danger' : 'warning') }}">
                                                    {{ imprimante.statut.value|upper }}
                                                </span>
                                            </td>
                                            <td>
                                                {% if dernierEtat %}
                                                    <div class="d-flex gap-2 align-items-center">
                                                        <span class="badge bg-{{ dernierEtat.noirPourcent is null ? 'secondary' : (dernierEtat.noirPourcent < 20 ? 'danger' : (dernierEtat.noirPourcent < 50 ? 'warning' : 'success')) }}">
                                                            N: {{ dernierEtat.noirPourcent ?? 'N/A' }}%
                                                        </span>
                                                        {% if imprimante.modele.couleur %}
                                                            <span class="badge bg-{{ dernierEtat.cyanPourcent is null ? 'secondary' : (dernierEtat.cyanPourcent < 20 ? 'danger' : (dernierEtat.cyanPourcent < 50 ? 'warning' : 'success')) }}">
                                                                C: {{ dernierEtat.cyanPourcent ?? 'N/A' }}%
                                                            </span>
                                                            <span class="badge bg-{{ dernierEtat.magentaPourcent is null ? 'secondary' : (dernierEtat.magentaPourcent < 20 ? 'danger' : (dernierEtat.magentaPourcent < 50 ? 'warning' : 'success')) }}">
                                                                M: {{ dernierEtat.magentaPourcent ?? 'N/A' }}%
                                                            </span>
                                                            <span class="badge bg-{{ dernierEtat.jaunePourcent is null ? 'secondary' : (dernierEtat.jaunePourcent < 20 ? 'danger' : (dernierEtat.jaunePourcent < 50 ? 'warning' : 'success')) }}">
                                                                J: {{ dernierEtat.jaunePourcent ?? 'N/A' }}%
                                                            </span>
                                                        {% endif %}
                                                    </div>
                                                {% else %}
                                                    <span class="text-muted">Aucune donnée</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if dernierReleve %}
                                                    <div>
                                                        <strong>{{ dernierReleve.dateReleve|date('d/m/Y') }}</strong>
                                                        <br>
                                                        <small class="text-muted">
                                                            N: {{ dernierReleve.compteurNoir ?? '-' }} | 
                                                            C: {{ dernierReleve.compteurCouleur ?? '-' }}
                                                        </small>
                                                    </div>
                                                {% else %}
                                                    <span class="text-muted">Aucun relevé</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('app_imprimante_show', {'id': imprimante.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('app_imprimante_edit', {'id': imprimante.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
