{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
    <h1>Site</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>NomSite</th>
                <td>{{ site.nomSite }}</td>
            </tr>
            <tr>
                <th>Principal</th>
