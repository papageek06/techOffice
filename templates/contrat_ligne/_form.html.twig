{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
    <div class="row g-3">
        <div class="col-12">
            {{ form_row(form.contrat) }}
        </div>

        <div class="col-12">
            {{ form_row(form.site) }}
        </div>

        <div class="col-12">
            {{ form_row(form.libelle) }}
        </div>

        <div class="col-12 col-md-6">
            {{ form_row(form.periodicite) }}
        </div>

        <div class="col-12 col-md-6">
            {{ form_row(form.prochaineFacturation) }}
        </div>

        <div class="col-12">
            <hr>
            <h5 class="mb-3">Tarification</h5>
        </div>

        <div class="col-12 col-md-4">
            {{ form_row(form.prixFixe) }}
        </div>

        <div class="col-12 col-md-4">
            {{ form_row(form.prixPageNoir) }}
        </div>

        <div class="col-12 col-md-4">
            {{ form_row(form.prixPageCouleur) }}
        </div>

        <div class="col-12 col-md-6">
            {{ form_row(form.pagesInclusesNoir) }}
        </div>

        <div class="col-12 col-md-6">
            {{ form_row(form.pagesInclusesCouleur) }}
        </div>

        <div class="col-12">
            <hr>
        </div>

        <div class="col-12">
            <div class="form-check form-switch">
                {{ form_widget(form.actif, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.actif, null, {'label_attr': {'class': 'form-check-label'}}) }}
                {% if form.actif.vars.help is defined and form.actif.vars.help %}
                    <div class="form-text">{{ form.actif.vars.help }}</div>
                {% endif %}
            </div>
            {{ form_errors(form.actif) }}
        </div>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Enregistrer') }}
        </button>
        {% if contrat_ligne.id is defined and contrat_ligne.id %}
            <a href="{{ path('app_contrat_ligne_show', {'id': contrat_ligne.id}) }}" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Annuler
            </a>
        {% else %}
            <a href="{{ path('app_contrat_ligne_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Annuler
            </a>
        {% endif %}
    </div>
{{ form_end(form) }}
