<form method="post" action="{{ path('app_contrat_ligne_delete', {'id': contrat_ligne.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ligne de contrat ? Cette action est irréversible.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contrat_ligne.id) }}">
    <button class="btn btn-outline-danger w-100">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
