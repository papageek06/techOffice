{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
    <div class="row g-3">
        <div class="col-12">
            {{ form_row(form.contratLigne) }}
        </div>

        <div class="col-12">
            {{ form_row(form.imprimante) }}
        </div>

        <div class="col-12 col-md-6">
            {{ form_row(form.dateDebut) }}
        </div>

        <div class="col-12 col-md-6">
            {{ form_row(form.typeAffectation) }}
        </div>

        <div class="col-12">
            {{ form_row(form.reason) }}
        </div>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Enregistrer') }}
        </button>
        {% if affectation_materiel.id is defined and affectation_materiel.id %}
            <a href="{{ path('app_affectation_materiel_show', {'id': affectation_materiel.id}) }}" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Annuler
            </a>
        {% else %}
            <a href="{{ path('app_affectation_materiel_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Annuler
            </a>
        {% endif %}
    </div>
{{ form_end(form) }}
