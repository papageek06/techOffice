{% extends 'base.html.twig' %}

{% block title %}Modifier l'affectation matériel{% endblock %}

{% block body %}
<div class="container-fluid px-3 px-md-4">
    <div class="row">
        <div class="col-12 col-lg-8 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-pencil"></i> Modifier l'affectation matériel</h1>
                <a href="{{ path('app_affectation_materiel_show', {'id': affectation_materiel.id}) }}" class="btn btn-outline-secondary">
