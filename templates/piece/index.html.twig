{% extends 'base.html.twig' %}

{% block title %}Catalogue des pièces{% endblock %}

{% block body %}
<div class="container-fluid px-3 px-md-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h1><i class="bi bi-puzzle"></i> Catalogue des pièces</h1>
        <a href="{{ path('app_piece_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvelle pièce
        </a>
    </div>

    {% if pieces is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucune pièce dans le catalogue.
        </div>
    {% else %}
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Référence</th>
                            <th>Désignation</th>
                            <th>Type</th>
                            <th>Couleur</th>
                            <th>Statut</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for piece in pieces %}
                            <tr>
                                <td><strong>{{ piece.reference }}</strong></td>
                                <td>{{ piece.designation }}</td>
                                <td>
                                    <span class="badge bg-secondary">{{ piece.typePiece.value }}</span>
                                </td>
                                <td>
                                    {% if piece.couleur %}
                                        <span class="badge bg-dark">{{ piece.couleur }}</span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if piece.actif %}
                                        <span class="badge bg-success">Actif</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactif</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <a href="{{ path('app_piece_show', {'id': piece.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_piece_edit', {'id': piece.id}) }}" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
