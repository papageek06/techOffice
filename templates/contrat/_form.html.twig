{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
    <div class="row g-3">
        <div class="col-12">
            {{ form_row(form.client) }}
        </div>

        <div class="col-12 col-md-6">
            {{ form_row(form.reference) }}
        </div>

        <div class="col-12 col-md-6">
            {{ form_row(form.typeContrat) }}
        </div>

        <div class="col-12 col-md-6">
            {{ form_row(form.dateDebut) }}
        </div>

        <div class="col-12 col-md-6">
            {{ form_row(form.dateFin) }}
        </div>

        <div class="col-12">
            {{ form_row(form.statut) }}
        </div>

        <div class="col-12">
            {{ form_row(form.notes) }}
        </div>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" name="save_only" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Enregistrer') }}
        </button>
        {% if not contrat.id or contrat.id == 0 %}
            <button type="submit" name="continue_config" value="1" class="btn btn-success">
                <i class="bi bi-arrow-right-circle"></i> Enregistrer et configurer
            </button>
        {% endif %}
        {% if contrat.id is defined and contrat.id %}
            <a href="{{ path('app_contrat_show', {'id': contrat.id}) }}" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Annuler
            </a>
        {% else %}
            <a href="{{ path('app_contrat_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Annuler
            </a>
        {% endif %}
    </div>
{{ form_end(form) }}
