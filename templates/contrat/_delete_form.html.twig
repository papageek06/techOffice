<form method="post" action="{{ path('app_contrat_delete', {'id': contrat.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce contrat ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contrat.id) }}">
    <button type="submit" class="btn btn-outline-danger w-100">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
