{% extends 'base.html.twig' %}

{% block title %}Contrats{% endblock %}

{% block body %}
<div class="container-fluid px-3 px-md-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h1><i class="bi bi-file-earmark-text"></i> Contrats</h1>
        <a href="{{ path('app_contrat_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau contrat
        </a>
    </div>

    {% if contrats is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun contrat enregistré.
        </div>
    {% else %}
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Référence</th>
                            <th>Client</th>
                            <th>Type</th>
                            <th>Période</th>
                            <th>Statut</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contrat in contrats %}
                            <tr>
                                <td><strong>{{ contrat.reference }}</strong></td>
                                <td>
                                    <a href="{{ path('app_client_show', {'id': contrat.client.id}) }}" class="text-decoration-none">
                                        {{ contrat.client.nom }}
                                    </a>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">{{ contrat.typeContrat.value }}</span>
                                </td>
                                <td>
                                    <small>
                                        {{ contrat.dateDebut|date('d/m/Y') }}
                                        {% if contrat.dateFin %}
                                            → {{ contrat.dateFin|date('d/m/Y') }}
                                        {% else %}
                                            <span class="text-muted">(sans fin)</span>
                                        {% endif %}
                                    </small>
                                </td>
                                <td>
                                    <span class="badge bg-{{ contrat.statut.value == 'ACTIF' ? 'success' : (contrat.statut.value == 'BROUILLON' ? 'warning' : 'secondary') }}">
                                        {{ contrat.statut.value }}
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_contrat_show', {'id': contrat.id}) }}" class="btn btn-outline-primary" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('app_contrat_edit', {'id': contrat.id}) }}" class="btn btn-outline-secondary" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="{{ path('app_contrat_configure', {'id': contrat.id}) }}" class="btn btn-outline-success" title="Configurer">
                                            <i class="bi bi-gear"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
