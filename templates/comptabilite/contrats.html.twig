{% extends 'base.html.twig' %}

{% block title %}Contrats - Comptabilité{% endblock %}

{% block body %}
<div class="container-fluid px-3 px-md-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h1>
                <i class="bi bi-file-earmark-text"></i> Contrats
            </h1>
            <p class="text-muted mb-0">Liste des contrats clients</p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('app_comptabilite_dashboard') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    {% if contrats is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun contrat enregistré.
        </div>
    {% else %}
        <div class="row g-3">
            {% for contrat in contrats %}
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-{{ contrat.statut.value == 'ACTIF' ? 'primary' : 'secondary' }} text-white">
                            <h6 class="mb-0">
                                <i class="bi bi-file-earmark-text"></i> {{ contrat.reference }}
                            </h6>
                            <small class="text-white-50">{{ contrat.typeContrat.value }}</small>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                <strong>Client:</strong> {{ contrat.client.nom }}
                            </p>
                            <p class="mb-2">
                                <strong>Période:</strong> 
                                {{ contrat.dateDebut|date('d/m/Y') }}
                                {% if contrat.dateFin %}
                                    - {{ contrat.dateFin|date('d/m/Y') }}
                                {% else %}
                                    (en cours)
                                {% endif %}
                            </p>
                            <p class="mb-0">
                                <strong>Statut:</strong> 
                                <span class="badge bg-{{ contrat.statut.value == 'ACTIF' ? 'success' : (contrat.statut.value == 'TERMINE' ? 'secondary' : 'warning') }}">
                                    {{ contrat.statut.value }}
                                </span>
                            </p>
                            <p class="mb-0 mt-2">
                                <strong>Lignes:</strong> {{ contrat.contratLignes|length }}
                            </p>
                        </div>
                        <div class="card-footer bg-white d-flex gap-2">
                            <a href="{{ path('app_comptabilite_contrat_show', {id: contrat.id}) }}" class="btn btn-sm btn-outline-primary flex-fill">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
