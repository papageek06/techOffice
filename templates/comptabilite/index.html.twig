{% extends 'base.html.twig' %}

{% block title %}Comptabilité - TechOffice{% endblock %}

{% block body %}
<div class="container-fluid px-3 px-md-4">
    {# En-tête #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1 class="h2 mb-1">
                        <i class="bi bi-calculator"></i> Comptabilité
                    </h1>
                    <p class="text-muted mb-0">Gestion des contrats et facturation</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_contrat_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Nouveau contrat
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Cartes statistiques #}
    <div class="row g-3 mb-4" id="statsCards">
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm h-100 stats-card">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <i class="bi bi-file-earmark-text fs-1 text-primary"></i>
                    </div>
                    <h3 class="mb-0">{{ stats.contrats_actifs }}</h3>
                    <small class="text-muted">Contrat(s) actif(s)</small>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a href="{{ path('app_contrat_index') }}" class="btn btn-sm btn-outline-primary w-100">
                        <i class="bi bi-arrow-right"></i> Voir
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm h-100 stats-card">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <i class="bi bi-list-ul fs-1 text-info"></i>
                    </div>
                    <h3 class="mb-0">{{ stats.lignes_actives }}</h3>
                    <small class="text-muted">Ligne(s) active(s)</small>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a href="{{ path('app_contrat_ligne_index') }}" class="btn btn-sm btn-outline-info w-100">
                        <i class="bi bi-arrow-right"></i> Voir
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm h-100 stats-card border-warning">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <i class="bi bi-file-earmark-dash fs-1 text-warning"></i>
                    </div>
                    <h3 class="mb-0">{{ stats.periodes_brouillon }}</h3>
                    <small class="text-muted">Période(s) à facturer</small>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a href="{{ path('app_facturation_periode_index', {'statut': 'BROUILLON'}) }}" class="btn btn-sm btn-outline-warning w-100">
                        <i class="bi bi-arrow-right"></i> Voir
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm h-100 stats-card">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <i class="bi bi-file-earmark-check fs-1 text-success"></i>
                    </div>
                    <h3 class="mb-0">{{ stats.periodes_validees }}</h3>
                    <small class="text-muted">Période(s) validée(s)</small>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a href="{{ path('app_facturation_periode_index', {'statut': 'VALIDE'}) }}" class="btn btn-sm btn-outline-success w-100">
                        <i class="bi bi-arrow-right"></i> Voir
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Contenu principal en 2 colonnes #}
    <div class="row g-4">
        {# Colonne gauche - Périodes à facturer #}
        <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history"></i> Périodes à facturer
                    </h5>
                    <a href="{{ path('app_facturation_periode_index') }}" class="btn btn-sm btn-outline-primary">
                        Voir tout <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body p-0">
                    {% if periodesAvecMontants is empty %}
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            <p class="mb-0">Aucune période à facturer</p>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 20%;">Période</th>
                                        <th style="width: 25%;">Contrat</th>
                                        <th style="width: 15%;">Pages</th>
                                        <th style="width: 20%;">Montant</th>
                                        <th style="width: 20%;" class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in periodesAvecMontants %}
                                        {% set periode = item.periode %}
                                        <tr>
                                            <td>
                                                <small>
                                                    {{ periode.dateDebut|date('d/m/Y') }}<br>
                                                    <span class="text-muted">→ {{ periode.dateFin|date('d/m/Y') }}</span>
                                                </small>
                                            </td>
                                            <td>
                                                <strong>{{ periode.contratLigne.libelle }}</strong><br>
                                                <small class="text-muted">
                                                    {{ periode.contratLigne.contrat.reference }} - {{ periode.contratLigne.site.nomSite }}
                                                </small>
                                            </td>
                                            <td>
                                                <span class="badge bg-dark">{{ item.pagesNoir }} N</span>
                                                {% if item.pagesCouleur > 0 %}
                                                    <span class="badge bg-info">{{ item.pagesCouleur }} C</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <strong class="text-success">{{ item.montant|number_format(2, ',', ' ') }} €</strong>
                                            </td>
                                            <td class="text-end">
                                                <a href="{{ path('app_facturation_periode_show', {'id': periode.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Contrats récents #}
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-file-earmark-text"></i> Contrats récents
                    </h5>
                    <a href="{{ path('app_contrat_index') }}" class="btn btn-sm btn-outline-primary">
                        Voir tout <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body p-0">
                    {% if contratsRecents is empty %}
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            <p class="mb-0">Aucun contrat</p>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Référence</th>
                                        <th>Client</th>
                                        <th>Type</th>
                                        <th>Statut</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for contrat in contratsRecents %}
                                        <tr>
                                            <td><strong>{{ contrat.reference }}</strong></td>
                                            <td>{{ contrat.client.nom }}</td>
                                            <td>
                                                <span class="badge bg-secondary">{{ contrat.typeContrat.value }}</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-{{ contrat.statut.value == 'ACTIF' ? 'success' : (contrat.statut.value == 'BROUILLON' ? 'warning' : 'secondary') }}">
                                                    {{ contrat.statut.value }}
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <a href="{{ path('app_contrat_show', {'id': contrat.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Colonne droite - Accès rapide #}
        <div class="col-12 col-lg-4">
            {# Accès rapide #}
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning-charge"></i> Accès rapide
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_contrat_index') }}" class="btn btn-outline-primary text-start">
                            <i class="bi bi-file-earmark-text"></i> Contrats
                        </a>
                        <a href="{{ path('app_contrat_ligne_index') }}" class="btn btn-outline-info text-start">
                            <i class="bi bi-list-ul"></i> Lignes de contrat
                        </a>
                        <a href="{{ path('app_facturation_periode_index') }}" class="btn btn-outline-warning text-start">
                            <i class="bi bi-calendar-range"></i> Périodes de facturation
                        </a>
                        <a href="{{ path('app_affectation_materiel_index') }}" class="btn btn-outline-secondary text-start">
                            <i class="bi bi-link-45deg"></i> Affectations matériel
                        </a>
                        <hr>
                        <a href="{{ path('app_contrat_new') }}" class="btn btn-primary text-start">
                            <i class="bi bi-plus-circle"></i> Nouveau contrat
                        </a>
                        <a href="{{ path('app_contrat_ligne_new') }}" class="btn btn-outline-primary text-start">
                            <i class="bi bi-plus-circle"></i> Nouvelle ligne
                        </a>
                    </div>
                </div>
            </div>

            {# Commandes utiles #}
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-terminal"></i> Commandes
                    </h5>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-2">
                        <i class="bi bi-info-circle"></i> Générer les périodes de facturation :
                    </p>
                    <code class="d-block p-2 bg-light rounded small">
                        php bin/console app:billing:generate-periods
                    </code>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animation des cartes statistiques
    const statsCards = document.querySelectorAll('.stats-card');
    statsCards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        setTimeout(() => {
            card.style.transition = 'all 0.5s ease';
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
        }, index * 100);
    });
});
</script>

<style>
.stats-card {
    transition: all 0.3s ease;
}

.stats-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}
</style>
{% endblock %}
