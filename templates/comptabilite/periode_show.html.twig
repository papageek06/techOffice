{% extends 'base.html.twig' %}

{% block title %}Période de facturation - {{ periode.dateDebut|date('d/m/Y') }}{% endblock %}

{% block body %}
<div class="container-fluid px-3 px-md-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h1>
                <i class="bi bi-calendar-range"></i> Période de facturation
            </h1>
            <p class="text-muted mb-0">
                {{ periode.dateDebut|date('d/m/Y') }} - {{ periode.dateFin|date('d/m/Y') }}
            </p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('app_comptabilite_periodes') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-8">
            {# Informations de la période #}
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informations</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Contrat</dt>
                        <dd class="col-sm-8">
                            <strong>{{ periode.contratLigne.contrat.reference }}</strong><br>
                            <small class="text-muted">{{ periode.contratLigne.contrat.client.nom }}</small>
                        </dd>

                        <dt class="col-sm-4">Site</dt>
                        <dd class="col-sm-8">{{ periode.contratLigne.site.nomSite }}</dd>

                        <dt class="col-sm-4">Période</dt>
                        <dd class="col-sm-8">
                            {{ periode.dateDebut|date('d/m/Y') }} - {{ periode.dateFin|date('d/m/Y') }}
                        </dd>

                        <dt class="col-sm-4">Statut</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-{{ periode.statut.value == 'FACTURE' ? 'success' : (periode.statut.value == 'VALIDE' ? 'info' : 'warning') }} fs-6">
                                {{ periode.statut.value }}
                            </span>
                        </dd>

                        <dt class="col-sm-4">Créée le</dt>
                        <dd class="col-sm-8">{{ periode.createdAt|date('d/m/Y H:i') }}</dd>
                    </dl>
                </div>
            </div>

            {# Détail du calcul #}
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-calculator"></i> Détail du calcul
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-12 col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block">Pages noires</small>
                                <strong class="fs-4">{{ calcul.pagesNoir }}</strong>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block">Pages couleur</small>
                                <strong class="fs-4">{{ calcul.pagesCouleur }}</strong>
                            </div>
                        </div>
                    </div>

                    {% if calcul.details is not empty %}
                        <h6 class="mb-3">Détail des montants</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Libellé</th>
                                        <th>Quantité</th>
                                        <th>Prix unitaire</th>
                                        <th class="text-end">Montant</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for detail in calcul.details %}
                                        <tr>
                                            <td>{{ detail.libelle }}</td>
                                            <td>
                                                {% if detail.quantite is defined %}
                                                    {{ detail.quantite }}
                                                    {% if detail.pages_incluses is defined and detail.pages_incluses > 0 %}
                                                        <small class="text-muted">({{ detail.pages_incluses }} incluses)</small>
                                                    {% endif %}
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if detail.prix_unitaire is defined %}
                                                    {{ detail.prix_unitaire|number_format(4, ',', ' ') }} €
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                            <td class="text-end">
                                                <strong>{{ detail.montant|number_format(2, ',', ' ') }} €</strong>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th colspan="3" class="text-end">Total</th>
                                        <th class="text-end text-success fs-5">
                                            {{ calcul.montant|number_format(2, ',', ' ') }} €
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            {# Résumé financier #}
            <div class="card border-0 shadow-sm mb-4 border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-cash-stack"></i> Montant total
                    </h5>
                </div>
                <div class="card-body text-center">
                    <h2 class="text-success mb-0">{{ calcul.montant|number_format(2, ',', ' ') }} €</h2>
                    <small class="text-muted">HT</small>
                </div>
            </div>

            {# Actions #}
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-tools"></i> Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        {% if periode.statut.value == 'BROUILLON' %}
                            <button type="button" class="btn btn-success" onclick="alert('Fonctionnalité à venir: Validation')">
                                <i class="bi bi-check-circle"></i> Valider
                            </button>
                        {% endif %}
                        {% if periode.statut.value == 'VALIDE' %}
                            <button type="button" class="btn btn-primary" onclick="alert('Fonctionnalité à venir: Facturation')">
                                <i class="bi bi-receipt"></i> Marquer comme facturé
                            </button>
                        {% endif %}
                        <button type="button" class="btn btn-outline-primary" onclick="alert('Fonctionnalité à venir: Export PDF')">
                            <i class="bi bi-file-pdf"></i> Export PDF
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
