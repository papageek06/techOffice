{% extends 'base.html.twig' %}

{% block title %}Quantités en stock{% endblock %}

{% block body %}
<div class="container-fluid px-3 px-md-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h1><i class="bi bi-box"></i> Quantités en stock</h1>
        <a href="{{ path('app_stock_item_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvelle entrée
        </a>
    </div>

    {% if stock_items is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucune quantité en stock enregistrée.
        </div>
    {% else %}
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Emplacement</th>
                            <th>Pièce</th>
                            <th>Quantité</th>
                            <th>Seuil d'alerte</th>
                            <th>Statut</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for stock_item in stock_items %}
                            {% set isLow = stock_item.seuilAlerte is not null and stock_item.quantite <= stock_item.seuilAlerte %}
                            <tr class="{{ isLow ? 'table-warning' : '' }}">
                                <td>
                                    <a href="{{ path('app_stock_location_show', {'id': stock_item.stockLocation.id}) }}" class="text-decoration-none">
                                        {{ stock_item.stockLocation.nomStock }}
                                    </a>
                                    <br>
                                    <small class="text-muted">{{ stock_item.stockLocation.site.nomSite }}</small>
                                </td>
                                <td>
                                    <strong>{{ stock_item.piece.reference }}</strong><br>
                                    <small class="text-muted">{{ stock_item.piece.designation }}</small>
                                </td>
                                <td>
                                    <strong>{{ stock_item.quantite }}</strong>
                                </td>
                                <td>
                                    {% if stock_item.seuilAlerte is not null %}
                                        {{ stock_item.seuilAlerte }}
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if isLow %}
                                        <span class="badge bg-warning">
                                            <i class="bi bi-exclamation-triangle"></i> Alerte
                                        </span>
                                    {% else %}
                                        <span class="badge bg-success">OK</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <a href="{{ path('app_stock_item_show', {'id': stock_item.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_stock_item_edit', {'id': stock_item.id}) }}" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
