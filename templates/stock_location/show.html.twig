{% extends 'base.html.twig' %}

{% block title %}Emplacement de stock - {{ stock_location.nomStock }}{% endblock %}

{% block body %}
<div class="container-fluid px-3 px-md-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h1>
                <i class="bi bi-geo-alt"></i> {{ stock_location.nomStock }}
            </h1>
            <p class="text-muted mb-0">
                <span class="badge bg-{{ stock_location.type.value == 'ENTREPRISE' ? 'primary' : 'info' }}">
                    {{ stock_location.type.value }}
                </span>
            </p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('app_stock_location_edit', {'id': stock_location.id}) }}" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a href="{{ path('app_stock_location_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informations</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Site</dt>
                        <dd class="col-sm-8">
                            <a href="{{ path('app_site_show', {'id': stock_location.site.id}) }}" class="text-decoration-none">
                                {{ stock_location.site.nomSite }}
                            </a>
                        </dd>

                        <dt class="col-sm-4">Client</dt>
                        <dd class="col-sm-8">{{ stock_location.site.client.nom }}</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-{{ stock_location.type.value == 'ENTREPRISE' ? 'primary' : 'info' }}">
                                {{ stock_location.type.value }}
                            </span>
                        </dd>

                        <dt class="col-sm-4">Statut</dt>
                        <dd class="col-sm-8">
                            {% if stock_location.actif %}
                                <span class="badge bg-success">Actif</span>
                            {% else %}
                                <span class="badge bg-secondary">Inactif</span>
                            {% endif %}
                        </dd>

                        <dt class="col-sm-4">Créé le</dt>
                        <dd class="col-sm-8">{{ stock_location.createdAt|date('d/m/Y H:i') }}</dd>

                        <dt class="col-sm-4">Modifié le</dt>
                        <dd class="col-sm-8">{{ stock_location.updatedAt|date('d/m/Y H:i') }}</dd>
                    </dl>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-box-seam"></i> Pièces en stock</h5>
                    <a href="{{ path('app_stock_item_new') }}" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-circle"></i> Ajouter
                    </a>
                </div>
                <div class="card-body p-0">
                    {% if stock_location.stockItems is empty %}
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            <p class="mb-0">Aucune pièce en stock</p>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Pièce</th>
                                        <th>Quantité</th>
                                        <th>Seuil d'alerte</th>
                                        <th>Statut</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for stockItem in stock_location.stockItems %}
                                        {% set isLow = stockItem.seuilAlerte is not null and stockItem.quantite <= stockItem.seuilAlerte %}
                                        <tr class="{{ isLow ? 'table-warning' : '' }}">
                                            <td>
                                                <strong>{{ stockItem.piece.reference }}</strong><br>
                                                <small class="text-muted">{{ stockItem.piece.designation }}</small>
                                            </td>
                                            <td>
                                                <strong>{{ stockItem.quantite }}</strong>
                                            </td>
                                            <td>
                                                {% if stockItem.seuilAlerte is not null %}
                                                    {{ stockItem.seuilAlerte }}
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if isLow %}
                                                    <span class="badge bg-warning">
                                                        <i class="bi bi-exclamation-triangle"></i> Alerte
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-success">OK</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-end">
                                                <a href="{{ path('app_stock_item_show', {'id': stockItem.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-tools"></i> Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_stock_item_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Ajouter une pièce
                        </a>
                        <a href="{{ path('app_stock_location_edit', {'id': stock_location.id}) }}" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        {{ include('stock_location/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
